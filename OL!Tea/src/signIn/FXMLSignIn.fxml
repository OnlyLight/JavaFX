<VBox fx:id="addMemberForm" alignment="CENTER" maxWidth="-Infinity" prefWidth="400.0" spacing="20.0" stylesheets="@../css/global.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="signIn.FXMLSignInController">
