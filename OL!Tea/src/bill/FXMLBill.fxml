<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bill.FXMLBillController">
   <children>
      <JFXButton fx:id="btnInThongTin" alignment="CENTER" prefHeight="33.0" prefWidth="138.0" style="-fx-background-color: #005cb2;" text="In Thông Tin" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
      <SplitPane orientation="VERTICAL" prefHeight="469.0" prefWidth="802.0">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="tbBill" prefHeight="634.0" prefWidth="800.0">
                    <columns>
                      <TableColumn fx:id="tbTenNVColumn" prefWidth="284.0" text="Nhân Viên" />
                      <TableColumn fx:id="tbTongTienColumn" prefWidth="210.0" text="Tổng tiền" />
                        <TableColumn fx:id="tbNgayLapColumn" minWidth="0.0" prefWidth="236.0" text="Ngày Lập" />
                    </columns>
                  </TableView>
                  <AreaChart fx:id="areaChart">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" fx:id="xAxis" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="yAxis" side="LEFT" />
                    </yAxis>
                  </AreaChart>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>
