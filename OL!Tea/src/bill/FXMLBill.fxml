<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-background-color: #eee;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bill.FXMLBillController">
   <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Label style="-fx-font-size: 20;" styleClass="font-bold" stylesheets="@../css/global.css" text="BILL STATISTICAL">
                     <padding>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </Label>
                  <HBox alignment="BASELINE_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <JFXButton fx:id="btnInThongTin" contentDisplay="GRAPHIC_ONLY" prefHeight="38.0" prefWidth="30.0" style="-fx-background-color: #00adb5;" text="Print" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="17.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIcon fill="WHITE" iconName="PRINT" size="1.2em" />
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="tbBill" prefHeight="634.0" prefWidth="800.0" style="-fx-background-color: #fff;" stylesheets="@../css/global.css">
              <columns>
                <TableColumn fx:id="tbTenNVColumn" prefWidth="284.0" text="Nhân Viên" />
                <TableColumn fx:id="tbTongTienColumn" prefWidth="210.0" text="Tổng tiền" />
                  <TableColumn fx:id="tbNgayLapColumn" minWidth="0.0" prefWidth="236.0" text="Ngày Lập" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <effect>
                  <DropShadow color="#00000033" />
               </effect>
            </TableView>
         </children>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label style="-fx-font-size: 20;" styleClass="font-bold" stylesheets="@../css/global.css" text="BILL STATISTICAL CHART">
               <padding>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <AreaChart fx:id="areaChart" style="-fx-background-color: #FFF;" VBox.vgrow="ALWAYS">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xAxis" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT" />
              </yAxis>
               <effect>
                  <DropShadow color="#00000033" />
               </effect>
            </AreaChart>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
